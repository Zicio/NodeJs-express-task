<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Название: <%= book.title %></h5>
                <p class="card-text">Авторы: <%= book.authors %></p>
                <p class="card-text">Описание: <%= book.description %></p>
                <p class="card-text">Количество просмотров: <%= view %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/book/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/book/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>